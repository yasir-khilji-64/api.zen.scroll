{
  "root": true,
  "env": {
    "node": true,
    "jest": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:prettier/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "commonjs"
  },
  "plugins": [
    "@typescript-eslint",
    "prettier"
  ],
  "rules": {
    "prettier/prettier": ["error", {
      "arrowParens": "always",
      "bracketSpacing": true,
      "printWidth": 80,
      "semi": true,
      "singleQuote": true,
      "tabWidth": 2,
      "trailingComma": "all"
    }]
  }
}
